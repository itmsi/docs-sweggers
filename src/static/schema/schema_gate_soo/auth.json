{
	"SchemaResponseSignin": {
		"type": "object",
		"properties": {
			"bearer_token": {
				"type": "string",
				"description": "JWT bearer token"
			},
			"access_token": {
				"type": "object",
				"properties": {
					"sub": {
						"type": "string",
						"format": "uuid",
						"description": "Subject (user ID)"
					},
					"full_name": {
						"type": "string",
						"description": "Full name of the user"
					},
					"roles": {
						"type": "array",
						"items": {
							"type": "string"
						},
						"description": "Array of user roles"
					},
					"jti": {
						"type": "string",
						"format": "uuid",
						"description": "JWT ID"
					},
					"exp": {
						"type": "integer",
						"description": "Expiration timestamp"
					},
					"iat": {
						"type": "integer",
						"description": "Issued at timestamp"
					}
				}
			},
			"refresh_token": {
				"type": "object",
				"properties": {
					"sub": {
						"type": "string",
						"format": "uuid",
						"description": "Subject (user ID)"
					},
					"full_name": {
						"type": "string",
						"description": "Full name of the user"
					},
					"roles": {
						"type": "array",
						"items": {
							"type": "string"
						},
						"description": "Array of user roles"
					},
					"jti": {
						"type": "string",
						"format": "uuid",
						"description": "JWT ID"
					},
					"exp": {
						"type": "integer",
						"description": "Expiration timestamp"
					},
					"iat": {
						"type": "integer",
						"description": "Issued at timestamp"
					}
				}
			},
			"exp": {
				"type": "integer",
				"description": "Token expiration in seconds"
			}
		}
	},
	"SchemaPostSignin": {
		"type": "object",
		"required": ["email", "password"],
		"properties": {
			"email": {
				"type": "string",
				"format": "email",
				"description": "User email address"
			},
			"password": {
				"type": "string",
				"description": "User password"
			}
		}
	},
	"SchemaPostSigninClient": {
		"type": "object",
		"required": ["username", "password", "captcha_key"],
		"properties": {
			"username": {
				"type": "string",
				"description": "Username or email"
			},
			"password": {
				"type": "string",
				"description": "User password"
			},
			"captcha_key": {
				"type": "string",
				"description": "Captcha verification key"
			}
		}
	},
	"SchemaPostSigninCustomer": {
		"type": "object",
		"required": ["username", "password", "captcha_key"],
		"properties": {
			"username": {
				"type": "string",
				"description": "Username or email"
			},
			"password": {
				"type": "string",
				"description": "User password"
			},
			"captcha_key": {
				"type": "string",
				"description": "Captcha verification key"
			}
		}
	},
	"SchemaResponseMe": {
		"type": "object",
		"properties": {
			"success": {
				"type": "boolean",
				"description": "Indicates if the request was successful"
			},
			"message": {
				"type": "string",
				"description": "Response message"
			},
			"data": {
				"type": "object",
				"properties": {
					"user_id": {
						"type": "string",
						"format": "uuid",
						"description": "User ID"
					},
					"full_name": {
						"type": "string",
						"description": "Full name of the user"
					},
					"role_id": {
						"type": "string",
						"format": "uuid",
						"description": "Role ID"
					},
					"role_name": {
						"type": "string",
						"description": "Role name"
					},
					"permissions": {
						"type": "array",
						"items": {
							"type": "string"
						},
						"description": "Array of user permissions"
					},
					"systems": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"system_id": {
									"type": "string",
									"format": "uuid"
								},
								"system_name": {
									"type": "string"
								},
								"roles": {
									"type": "array",
									"items": {
										"type": "object",
										"properties": {
											"role_id": {
												"type": "string",
												"format": "uuid"
											},
											"role_name": {
												"type": "string"
											}
										}
									}
								}
							}
						},
						"description": "Array of systems user has access to"
					}
				}
			},
			"timestamp": {
				"type": "string",
				"format": "date-time",
				"description": "Response timestamp"
			}
		}
	},
	"SchemaPostReset": {
		"type": "object",
		"required": ["email"],
		"properties": {
			"email": {
				"type": "string",
				"format": "email",
				"description": "User email address"
			}
		}
	},
	"SchemaPostResetClient": {
		"type": "object",
		"required": ["email", "captcha_key"],
		"properties": {
			"email": {
				"type": "string",
				"format": "email",
				"description": "User email address"
			},
			"captcha_key": {
				"type": "string",
				"description": "Captcha verification key"
			}
		}
	},
	"SchemaPostResetCustomer": {
		"type": "object",
		"required": ["email", "captcha_key"],
