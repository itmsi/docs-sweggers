			"email": {
				"type": "string",
				"format": "email",
				"description": "User email address"
			},
			"captcha_key": {
				"type": "string",
				"description": "Captcha verification key"
			}
		}
	},
	"SchemaPostResetPassword": {
		"type": "object",
		"required": ["password"],
		"properties": {
			"password": {
				"type": "string",
				"minLength": 8,
				"description": "New password"
			}
		}
	},
	"SchemaPostClientChangePassword": {
		"type": "object",
		"required": ["old_password", "password", "password_confirmation"],
		"properties": {
			"old_password": {
				"type": "string",
				"description": "Current password"
			},
			"password": {
				"type": "string",
				"minLength": 8,
				"description": "New password"
			},
			"password_confirmation": {
				"type": "string",
				"description": "Password confirmation"
			}
		}
	},
	"SchemaPostCustomerChangePassword": {
		"type": "object",
		"required": ["old_password", "password", "password_confirmation"],
		"properties": {
			"old_password": {
				"type": "string",
				"description": "Current password"
			},
			"password": {
				"type": "string",
				"minLength": 8,
				"description": "New password"
			},
			"password_confirmation": {
				"type": "string",
				"description": "Password confirmation"
			}
		}
	},
	"SchemaPostRegisterCustomer": {
		"type": "object",
		"required": ["first_name", "last_name", "email", "password", "mobile_phone"],
		"properties": {
			"first_name": {
				"type": "string",
				"description": "First name"
			},
			"last_name": {
				"type": "string",
				"description": "Last name"
			},
			"email": {
				"type": "string",
				"format": "email",
				"description": "Email address"
			},
			"password": {
				"type": "string",
				"minLength": 8,
				"description": "Password"
			},
			"mobile_phone": {
				"type": "string",
				"description": "Mobile phone number"
			},
			"birthplace": {
				"type": "string",
				"nullable": true,
				"description": "Birth place"
			},
			"birthdate": {
				"type": "string",
				"format": "date",
				"nullable": true,
				"description": "Birth date"
			},
			"ktp_no": {
				"type": "string",
				"nullable": true,
				"description": "KTP number"
			},
			"address": {
				"type": "string",
				"nullable": true,
				"description": "Address"
			}
		}
	},
	"SchemaErrorResponse": {
		"type": "object",
		"properties": {
			"success": {
				"type": "boolean",
				"description": "Indicates if the request was successful"
			},
			"message": {
				"type": "string",
				"description": "Error message"
			},
			"errors": {
				"type": "array",
				"items": {
					"type": "string"
				},
				"nullable": true,
				"description": "Array of error details"
			},
			"timestamp": {
				"type": "string",
				"format": "date-time",
				"description": "Response timestamp"
			}
		}
	}
}