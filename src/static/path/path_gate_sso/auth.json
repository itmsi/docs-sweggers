            }
          }
        }
      }
    }
  },
  "/auth/sso/login": {
    "post": {
      "tags": [
        "SSO Authentication"
      ],
      "summary": "SSO Login",
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "User email address"
                  },
                  "password": {
                    "type": "string",
                    "description": "User password"
                  },
                  "client_id": {
                    "type": "string",
                    "description": "SSO Client ID (optional)"
                  },
                  "redirect_uri": {
                    "type": "string",
                    "description": "Redirect URI (optional)"
                  }
                }
              }
          }
        }
      },
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": {
                    "type": "boolean"
                  },
                  "message": {
                    "type": "string"
                  },
                  "data": {
                    "type": "object",
                    "properties": {
                      "user_id": {
                        "type": "string",
                        "format": "uuid"
                      },
                      "user_name": {
                        "type": "string"
                      },
                      "user_email": {
                        "type": "string"
                      },
                      "role_id": {
                        "type": "string",
                        "format": "uuid"
                      },
                      "client_id": {
                        "type": "string"
                      },
                      "authorization_code": {
                        "type": "string"
                      },
                      "redirect_uri": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "400": {
          "description": "Bad Request",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SchemaErrorResponse"
              }
            }
          }
        },
        "401": {
          "description": "Unauthorized",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SchemaErrorResponse"
              }
            }
          }
        }
      }
    }
  },
  "/auth/sso/authorize": {
    "get": {
      "tags": [
        "SSO Authentication"
      ],
      "summary": "SSO Authorization",
      "parameters": [
        {
          "name": "client_id",
          "in": "query",
          "required": true,
          "schema": {
            "type": "string"
          },
          "description": "SSO Client ID"
        },
        {
          "name": "redirect_uri",
          "in": "query",
          "required": true,
          "schema": {
            "type": "string"
          },
          "description": "Redirect URI"
        },
        {
          "name": "response_type",
          "in": "query",
          "required": true,
          "schema": {
            "type": "string",
            "enum": ["code"]
          },
          "description": "Response type (must be 'code')"
        },
        {
          "name": "state",
          "in": "query",
          "required": false,
          "schema": {
            "type": "string"
          },
          "description": "State parameter"
        }
      ],
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": {
                    "type": "boolean"
                  },
                  "message": {
                    "type": "string"
                  },
                  "data": {
                    "type": "object",
                    "properties": {
                      "authorization_url": {
                        "type": "string"
                      },
                      "code": {
                        "type": "string"
                      },
                      "state": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "400": {
          "description": "Bad Request",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SchemaErrorResponse"
              }
            }
          }
        }
      }
    }
  },
  "/auth/sso/token": {
    "post": {
      "tags": [
        "SSO Authentication"
      ],
      "summary": "SSO Token Exchange",
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": ["grant_type", "code", "client_id", "client_secret", "redirect_uri"],
              "properties": {
                "grant_type": {
                  "type": "string",
                  "enum": ["authorization_code"],
                  "description": "Grant type"
                },
                "code": {
                  "type": "string",
                  "description": "Authorization code"
                },
                "client_id": {
                  "type": "string",
                  "description": "SSO Client ID"
                },
                "client_secret": {
                  "type": "string",
                  "description": "SSO Client Secret"
                },
                "redirect_uri": {
                  "type": "string",
                  "description": "Redirect URI"
                }
              }
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": {
                    "type": "boolean"
                  },
                  "message": {
                    "type": "string"
                  },
                  "data": {
                    "type": "object",
                    "properties": {
                      "access_token": {
                        "type": "string"
                      },
                      "token_type": {
                        "type": "string",
                        "enum": ["Bearer"]
                      },
                      "expires_in": {
                        "type": "integer"
                      },
                      "refresh_token": {
                        "type": "string"
                      },
                      "scope": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "400": {
          "description": "Bad Request",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SchemaErrorResponse"
              }
            }
          }
        }
      }
    }
  },
  "/auth/sso/userinfo": {
    "get": {
      "tags": [
        "SSO Authentication"
      ],
      "summary": "Get SSO User Info",
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": {
                    "type": "boolean"
                  },
                  "message": {
                    "type": "string"
                  },
                  "data": {
                    "type": "object",
                    "properties": {
                      "user_id": {
                        "type": "string",
                        "format": "uuid"
                      },
                      "user_name": {
                        "type": "string"
                      },
                      "user_email": {
                        "type": "string"
                      },
                      "role_id": {
                        "type": "string",
                        "format": "uuid"
                      },
                      "client_id": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "401": {
          "description": "Unauthorized",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SchemaErrorResponse"
              }
            }
          }
        }
      }
    }
  },
  "/auth/sso/logout": {
    "get": {
      "tags": [
        "SSO Authentication"
      ],
      "summary": "SSO Logout",
      "description": "Logout user from SSO system using Bearer token from Authorization header",
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": {
                    "type": "boolean",
                    "example": true
                  },
                  "message": {
                    "type": "string",
                    "example": "Logout berhasil"
                  },
                  "data": {
                    "type": "object",
                    "properties": {
                      "user_id": {
                        "type": "string",
                        "format": "uuid",
                        "description": "User ID that was logged out"
                      },
                      "logout_time": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Timestamp when logout occurred"
                      }
                    }
                  },
                  "timestamp": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Response timestamp"
                  }
                }
              }
            }
          }
        },
        "401": {
          "description": "Unauthorized",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SchemaErrorResponse"
              }
            }
          }
        },
        "500": {
          "description": "Internal Server Error",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SchemaErrorResponse"
              }
            }
          }
        }
      }
    }
  }
}